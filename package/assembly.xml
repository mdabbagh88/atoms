<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>tar</id>
	<formats>
		<format>tar.gz</format>
	</formats>

	<includeBaseDirectory>true</includeBaseDirectory>

	<dependencySets>

		<!-- Create common lib's folder -->
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>org.jboss.aerogear.unifiedpush:unifiedpush-server-wildfly</include>
				<include>org.jboss.aerogear.unifiedpush:unifiedpush-auth-server</include>
				<include>org.jboss.aerogear.unifiedpush:unifiedpush-initdb</include>
			</includes>
			<useTransitiveFiltering>false</useTransitiveFiltering>
			<fileMode>0755</fileMode>
		</dependencySet>
	</dependencySets>

</assembly>
